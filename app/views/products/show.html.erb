<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  
  <%= link_to image_tag(@product.image_url, width: 400, height: 200), @product.image_url, :class => 'fancybox' %>
</p>
<p>
  <strong>Price:</strong>
  
  <%=@product.cents_to_dollars(@product.price)%>
</p>
<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
<div class="pay-button"><%= form_tag "/payments/create" do %>
  <%= hidden_field_tag :product_id, @product.id %>
  <%= render partial: "shared/stripe_checkout_button" %>
<% end %></div>
<%= render 'new_comment' %>
<%= render 'list_comments' %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
