<section class="container">

<h1>Your orders</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Product</th>
      <th>Total</th>
      <th>Order ID</th>
      
    </tr>
  </thead>

  <tbody>
    <% current_user.orders.each do |order| %>
  <%= render order %>
<% end %>
      
  </tbody>
</table>

</section>


